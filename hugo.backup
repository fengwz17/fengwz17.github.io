[params]
  profilePicture = "images/profile.png"
  enableDarkMode = true
  
  [[params.social]]
    name = "github"
    url = "https://github.com/fengwz17"
    icon = "fab fa-github"
  [[params.social]]
    name = "dblp"
    url = "https://dblp.org/pid/278/3051.html"
    icon = "fab fa-google-scholar"
  [[params.social]]
    name = "email"
    url = "fengwzATios.ac.cn"
    icon = "fas fa-envelope"

[build]
  writeStats = false

[markup]
  [markup.goldmark]
    [markup.goldmark.renderer]
      unsafe = true
